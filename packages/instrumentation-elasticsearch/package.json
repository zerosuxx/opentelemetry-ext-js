{
    "name": "@zerosuxx/opentelemetry-instrumentation-elasticsearch",
    "version": "0.41.0-3",
    "description": "open telemetry instrumentation for the `elasticsearch` module",
    "keywords": [
        "elasticsearch",
        "@elastic/elasticsearch",
        "opentelemetry"
    ],
    "author": {
        "name": "Aspecto",
        "email": "support@aspecto.io",
        "url": "https://aspecto.io"
    },
    "homepage": "https://github.com/aspecto-io/opentelemetry-ext-js",
    "license": "Apache-2.0",
    "main": "dist/src/index.js",
    "files": [
        "dist/**/*.js",
        "dist/**/*.js.map",
        "dist/**/*.d.ts",
        "dist/src/**/*.js.map",
        "LICENSE",
        "README.md"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/aspecto-io/opentelemetry-ext-js.git"
    },
    "scripts": {
        "build": "tsc",
        "prepare": "npm run build",
        "watch": "tsc -w",
        "typecheck": "tsc --noEmit",
        "version:update": "node ../../scripts/version-update.js",
        "version": "npm run version:update",
        "test": "mocha --require @opentelemetry/contrib-test-utils",
        "test:jaeger": "OTEL_EXPORTER_JAEGER_AGENT_HOST=localhost mocha --require @opentelemetry/contrib-test-utils",
        "test-all-versions": "tav",
        "test:ci": "npm run test-all-versions"
    },
    "bugs": {
        "url": "https://github.com/aspecto-io/opentelemetry-ext-js/issues"
    },
    "peerDependencies": {
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/core": "^2.0.1",
        "@opentelemetry/instrumentation": "^0.203.0",
        "@opentelemetry/semantic-conventions": "^1.36.0"
    },
    "devDependencies": {
        "@elastic/elasticsearch": "^7.8.0",
        "@opentelemetry/api": "^1.9.0",
        "@opentelemetry/contrib-test-utils": "^0.49.0",
        "@types/chai": "^5.2.2",
        "@types/mocha": "^10.0.10",
        "chai": "^6.0.1",
        "expect": "^30.0.5",
        "mocha": "^11.7.1",
        "nock": "^14.0.10",
        "sinon": "^21.0.0",
        "test-all-versions": "^6.2.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2"
    },
    "mocha": {
        "extension": [
            "ts"
        ],
        "spec": "test/**/*.spec.ts",
        "require": [
            "ts-node/register"
        ]
    }
}
